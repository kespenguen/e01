__VERTEX__

#version 460 core

    layout (location = 0) in vec3 aPos;
    
    void main(){
        gl_Position = vec4(aPos.x, aPos.y, aPos.z, 1.0);
    };

__VERTEX_END__

__FRAGMENT__

#version 460 core

    out vec4 FragColor;
    uniform vec4 ourColor;
    void main(){
        FragColor = ourColor;
    };

__FRAGMENT_END__